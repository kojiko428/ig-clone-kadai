<h3>以下の内容で、送信する。</h3>

<div class=name>
<p><%="#{@blog.user.name}さんのブログ"%></p>
</div>
<%= form_with(model: @blog, local: true, url: blogs_path ) do |form| %>
  <%= form.hidden_field :title %>
  <%= form.hidden_field :content %>
  <!-- <%= image_tag(@blog.image.url) if @blog.image && @blog.image.url %> -->
  <%= form.hidden_field :image_cache %>
  <p>タイトル:<%= @blog.title %></p>
  <p>本文:<%= @blog.content %></p>
  <p>Image:<%= image_tag @blog.image.url %> </p>

  <%= form.submit  "登録する" %>
  <%= form.submit "戻る", name: 'back' %>
<% end %>
