<h1>ブログ一覧</h1>

<table>
  <tr>
    <th>ユーザー名</th>
    <th>タイトル</th>
    <th>内容</th>
    <th>画像</th>

  </tr>
<% @blogs.each do |blog| %>
  <tr>
    <td><%= "#{blog.user.name}さんのブログ" %></td>
    <td><%= blog.title %></td>
    <td><%= blog.content %></td>
    <td><%= image_tag blog.image.url , size: '50x50'%></td>
    <td><%= link_to '【詳細を確認する】', blog_path(blog.id) %></td>

<!-- ログインユーザーのみ入力できる -->
    <% if current_user.id == blog.user.id %>
       <td><%= link_to '【ブログを編集する】', edit_blog_path(blog.id), data: { confirm: '本当に編集していいですか？' }  %></td>
       <td><%= link_to '【ブログを削除する】', blog_path(blog.id), method: :delete ,data: { confirm: '本当に削除していいですか？' } %></td>
    <% end %>
  </tr>
<% end %>
</table>
<%= link_to '新規作成する', new_blog_path %>
